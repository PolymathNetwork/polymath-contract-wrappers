{
  "name": "@polymathnetwork/contract-wrappers",
  "version": "2.0.0-beta.23",
  "description": "Smart TS wrappers for Polymath smart contracts",
  "keywords": [
    "polymath",
    "ethereum"
  ],
  "files": [
    "lib/**/*"
  ],
  "main": "lib/index.js",
  "browser": "lib/index.browser.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "start": "webpack-dev-server --config=webpack.config.dev.js",
    "build": "webpack",
    "build:ci": "yarn build",
    "commit": "npx git-cz",
    "semantic-release": "semantic-release",
    "lint": "./node_modules/.bin/eslint ./src --ext .js,.ts",
    "lint:fix": "./node_modules/.bin/eslint ./src --ext .js,.ts --fix",
    "clean": "shx rm -rf lib docs",
    "docs": "typedoc --excludePrivate --excludeExternals --exclude node_modules/ --name 'Polymath API' --target ES5 --module commonjs --tsconfig typedoc-tsconfig.json --out docs/ src/",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/PolymathNetwork/polymath-contract-wrappers.git"
  },
  "bugs": {
    "url": "https://github.com/PolymathNetwork/polymath-contract-wrappers/issues"
  },
  "homepage": "https://github.com/PolymathNetwork/polymath-contract-wrappers/blob/master/README.md",
  "engines": {
    "node": ">=6.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@semantic-release/git": "^7.1.0-beta.3",
    "@types/ethereumjs-util": "^5.2.0",
    "@types/jest": "^24.0.11",
    "@types/lodash": "4.14.104",
    "@types/node": "*",
    "@types/uuid": "^3.4.4",
    "@types/web3": "^1.0.14",
    "@types/web3-provider-engine": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "awesome-typescript-loader": "^5.2.1",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "coveralls": "^3.0.3",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-prettier": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.0",
    "jest": "^24.7.1",
    "lint-staged": ">=8",
    "prettier": "^1.16.4",
    "semantic-release": "16.0.0-beta.18",
    "semantic-release-cli": "^5.1.1",
    "shx": "^0.3.2",
    "ts-jest": "^24.0.1",
    "ts-mockito": "^2.3.1",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typedoc": "0.13.0",
    "typescript": "3.2.2",
    "web3-provider-engine": "14.0.6",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "@0x/assert": "^2.1.0",
    "@0x/json-schemas": "^3.0.11",
    "@0x/subproviders": "^4.1.1",
    "@0x/types": "^2.4.0",
    "@0x/typescript-typings": "^4.2.3",
    "@polymathnetwork/abi-wrappers": "3.0.0-beta.6",
    "@types/semver": "^6.0.1",
    "ethereumjs-blockstream": "6.0.0",
    "ethereumjs-util": "^6.1.0",
    "js-sha3": "^0.8.0",
    "lodash": "^4.17.5",
    "moment": "^2.24.0",
    "semver": "^6.3.0",
    "uuid": "^3.3.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
