{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2017", "dom"],
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "noImplicitReturns": true,
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "lib",
    "rootDir": "src",
    "resolveJsonModule": true,
    "baseUrl": "."
  },
  "include": [
    "./src/**/*",
    "./node_modules/web3-typescript-typings/index.d.ts"
  ]
}
